<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/register"
    tools:context=".login">


    <TextView
        android:id="@+id/loginText"
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_x="47dp"
        android:layout_y="216dp"
        android:fontFamily="@font/poppins_regular"
        android:text="Sign Up "
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/fullname"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="288dp"
        android:textColor="@color/black"
        android:drawableLeft="@drawable/ic_baseline_person_24"
        android:drawablePadding="8dp"
        android:fontFamily="@font/poppins_regular"
        android:ems="10"
        android:hint="Enter your Name"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/confirmpass"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="523dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:textColor="@color/black"
        android:hint="Enter your password"
        android:fontFamily="@font/poppins_regular"
        android:inputType="textPassword"
        app:endIconMode="password_toggle" />

    <ImageView
        android:id="@+id/profile_pic"
        android:layout_width="71dp"
        android:layout_height="52dp"
        android:layout_centerHorizontal="true"
        android:layout_x="50dp"
        android:layout_y="578dp"
        android:onClick="selectImage"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/conpasstv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="504dp"
        android:text="Confirm Password"
        android:fontFamily="@font/poppins_regular"
        android:textColor="#128C80"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/password"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="444dp"
        android:drawableLeft="@drawable/ic_baseline_vpn_key_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:hint="Enter your password"
        android:inputType="textPassword"
        app:endIconMode="password_toggle" />

    <TextView
        android:id="@+id/passwordtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="423dp"
        android:text="Password"
        android:textColor="#128C80"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/email"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="366dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:drawablePadding="8dp"
        android:ems="10"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_regular"
        android:hint="Enter your email"
        android:inputType="textEmailAddress" />

    <TextView
        android:id="@+id/emailtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="50dp"
        android:layout_y="345dp"
        android:text="Email"
        android:textColor="#128C80"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="49dp"
        android:layout_y="268dp"
        android:text="Fullname"
        android:textColor="#128C80"
        android:fontFamily="@font/poppins_regular"
        android:textSize="15dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/signup"
        android:layout_width="122dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_x="48dp"
        android:layout_y="636dp"
        android:backgroundTint="#128C80"
        android:fontFamily="@font/poppins_regular"
        android:text="Submit"
        android:textSize="15dp"
        app:cornerRadius="13dp" />

    <TextView
        android:id="@+id/l1"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_x="85dp"
        android:layout_y="686dp"
        android:text="Don't have an account?"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="normal" />

    <EditText
        android:id="@+id/anchor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="245dp"
        android:layout_y="687dp"
        android:background="?android:selectableItemBackground"
        android:clickable="true"
        android:focusable="false"
        android:text="Click me"
        android:textColor="#128C80"
        android:textSize="15dp" />

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="184dp"
        android:layout_y="636dp" />

</AbsoluteLayout>



